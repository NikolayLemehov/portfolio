{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-property-sort-order-smacss"
  ],
  "rules": {
    "selector-class-pattern": [
      "^[a-z][a-zA-Z0-9-]+$",
      {
        "message": "Expected class name to be a camelCase string.",
        "severity": "error"
      }
    ]
  }
}